<h1>画像投稿フォーム</h1>
  <%= form_with model: @post_image do |f| %>
<!--form_with を利用して、
post_images_path/post_imagesに画像をアップロードします。-->
<!--画像アップロードフィールドは、
< %= f.file_field :image, accept: "image/*" %>で実装するます-->

    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>ショップ名</h4>
      <%= f.text_field :shop_name %>
    <h4>説明</h4>
      <%= f.text_area :caption %>
    <%= f.submit '投稿' %>
  <% end %>